<ProxyEndpoint name="default">
    <Flows>
      <Flow name="OptionsPreFlight">
            <Request/>
            <Response>
                <Step>
                    <Name>AssignMessage.AddCors</Name>
                </Step>
            </Response>
        <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
      </Flow>
    </Flows>
    <PreFlow/>
    <HTTPProxyConnection>
        <BasePath>{{ SERVICE_BASE_PATH }}</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="NoRoute">
        <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition>
    </RouteRule>
    <RouteRule name="sync-wrap">
      <Condition>request.verb = "PATCH" and request.header.prefer != "respond-async"</Condition>
      <TargetEndpoint>sync-wrap</TargetEndpoint>
    </RouteRule>
    <RouteRule name="ig3">
      <Condition>request.verb != "PATCH" or request.header.prefer = "respond-async"</Condition>
      <TargetEndpoint>ig3</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>
